
<div class='container text-center my-4 border-1'>

  <%= form_for(@restaurant) do |f| %>

    <div class="mb-3">
      <label class='form-label'><%= f.label :name %></label>
      <%= f.text_field :name%>
    </div>
    <div class="mb-3">
      <label class='form-label'><%= f.label :address %></label>
      <%= f.text_field :address %>
    </div>
    <div class="mb-3">
      <label class='form-label'><%= f.label :rating %></label>
      <%= f.number_field :rating %>
    </div>
    <%= f.submit "Update Restaurant", class: "btn btn-primary "%>

  <% end %>
</div>
